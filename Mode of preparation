pipeline {
    agent any
    stages {
       stage('build') {
          steps {
              echo "hello sattar"
            sh '''
              ls -ltr
              pwd
              yum install nodejs -y
          }
       
       }
       stage('accept') {
           steps {
               echo "good evening"
           }
       
       }
    
       stage('deploy') {
           steps {
               echo "hello baig"
           }
       }
    
    }
    post {
       always {
            echo "script always run"
       
       }
       failure {
             echo "failure"
       }
       success {
            echo "success"
       }
   }
}